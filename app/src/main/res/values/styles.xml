<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="StyleButton" >
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="background">@drawable/shape_button</item>
    </style>

    <style name="StyleEditText" >
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="background">@drawable/shape_et</item>
    </style>

    <style name="styleHorizontalView" >
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/colorLightBlack</item>
    </style>

    <style name="styleVerticalView" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="background">@color/colorDarkGray</item>
    </style>


    <style name="DialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

</resources>